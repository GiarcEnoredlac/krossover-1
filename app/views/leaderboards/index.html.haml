.row
	.col-sm-3
		.panel.center
			.panel-body
				- if current_user.reviews.count > 0
					%h1.font-thin{style: "margin:0;"}
						= current_user.total_points.round
					%span.text-muted 
						You've earned 
						%span.bold 
							#{current_user.total_points.round} 
						points
				- else
					%h1.font-thin{style: "margin:0;"}
						0
%h3 Leaderboards
%table.table.table-leaderboards
	%thead
		%tr
			%td 
			%td Name
			%td Points
	%tbody.bold
		- @users.each_with_index do |user, index|
			%tr
				%td.leaderboard-rank
					= index + 1
				%td.leaderboard-avatar
					%span
						= image_tag(user.profile_image.url(:thumb), class: "avatar thumb-sm")
					= link_to user.full_name, profile_path(user.username)
				- user.badges.each do |badge|
					%td= badge.name
				%td.leaderboard-points
					= user.total_points.round
