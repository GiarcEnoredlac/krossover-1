.col-md-3
	.panel.panel-default
		.panel-heading
			Leaderboard
		%ul.list-group.list-group-lg.m-b-none
			- @users.each do |user|
				%li.list-group-item
					%a.thumb-sm.m-r{:href => ""}
						= image_tag(user.profile_image.url(:thumb), class: 'r r-2x')
					= link_to user.full_name, profile_path(user.username)
